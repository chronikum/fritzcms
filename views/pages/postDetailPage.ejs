<head>
    <%- include ("../partials/head") %>
</head>
<link href="https://cdn.quilljs.com/1.3.6/quill.bubble.css" rel="stylesheet">
<script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>

<body class="container">
    <%- include ("../partials/navigationBar") %>
    <main>
        <div class="jumbotron">
            <h1><%= postTitle %></h1>
            <br>
            <p><%= postDescription %></p>
            <br>
            <div id="postContent"><%= postContent %></div>
            <br>
        </div>
    </main>
</body>
<script>
    var content = document.getElementById('postContent').innerText;
    console.log(content)
    var quill = new Quill('#postContent', {
        theme: 'bubble',
        modules: {
            toolbar: false,
        },
        readOnly: true
    });
    quill.disable()
    setRichContent();

    function setRichContent() {
        quill.setContents(JSON.parse(content));
    }
</script>

</html>